<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PhotoText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dim_photo_text_size</item>
    </style>

    <style name="FloatingText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dim_floating_text_size</item>
    </style>

    <style name="ChartPercentBase">
        <item name="android:textSize">@dimen/dim_chart_percent_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChartPercentBase.Highest">
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="ChartPercentBase.Mid">
        <item name="android:textColor">@color/colorBlueOne</item>
    </style>

    <style name="ChartPercentBase.Low">
        <item name="android:textColor">@color/colorBlueTwo</item>
    </style>

    <style name="ChartDimensionText">
        <item name="android:textSize">@dimen/dim_chart_dimension_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGreyTwo</item>
    </style>

    <style name="MatchDetailTextDetail">
        <item name="android:textColor">@color/colorMatchDetail</item>
        <item name="android:textSize">@dimen/dim_match_detail_text_detail_size</item>
    </style>

    <style name="MatchDetailTextField">
        <item name="android:textColor">@color/colorGreyTwo</item>
        <item name="android:textSize">@dimen/dim_match_detail_text_size</item>
    </style>

</resources>