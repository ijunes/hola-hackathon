<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.eharmony.hola.widget.PhotoView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_photo_info_view_size" />

    <com.eharmony.hola.widget.ChartView
        android:id="@+id/chart_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_chart_view_size"
        android:layout_below="@id/photo_view" />

    <ImageButton
        android:layout_width="@dimen/dim_floating_button_size"
        android:layout_height="@dimen/dim_floating_button_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dim_floating_button_margin_right"
        android:layout_marginRight="@dimen/dim_floating_button_margin_right"
        android:layout_marginTop="@dimen/dim_floating_button_margin_top"
        android:background="@drawable/ripple_floating_button"
        android:elevation="@dimen/dim_floating_button_elevation"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>